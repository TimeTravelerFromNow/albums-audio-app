

<div class="col">

<%= render "categories/categories_banner", categories: @categories %>

<div id="blog_posts" class="row d-flex justify-content-center">

    <% @blog_posts.where(status: "public").order(created_at: :desc).each do |blog_post| %>
      <%= link_to blog_post_path(blog_post), class: 'text-decoration-none col-sm bp-card card position-relative' do  %>
        <%= render "bp_card", blog_post: blog_post %>
            <div class= "btn btn-secondary btn-show mt-auto">
              read
            </div>
      <% end %>
    <% end %>

</div>


</div>
