
<% bg_img = "" %>
<% if album.album_cover_image.present? %>
  <% bg_img = url_for(album.album_cover_image) %>
<% end %>

<%= link_to album, class: "col-7 card album-cover album-img",
style:"--album-cover-image: url(#{ bg_img });" do %>

  <div class="album-spacer">
  </div>
    <div class=" d-flex flex-column">
      <h5 class='card album-name mb-1 text-dark'><%= album.name %></h5>
    </div>


<% end %>
